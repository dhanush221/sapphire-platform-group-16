{
  "name": "sapphire-platform-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "start:web": "npm --prefix ../frontend run build && node src/index.js",
    "dev:all": "concurrently -n api,web -c blue,cyan \"npm run dev\" \"cross-env VITE_API_BASE=http://localhost:5000 npm --prefix ../frontend run dev\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "https-proxy-agent": "^7.0.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "openai": "^4.56.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.4",
    "prisma": "^5.19.1"
  }
}
